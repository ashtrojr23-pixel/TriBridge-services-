<script>
const themeToggle = document.getElementById('theme-toggle');
themeToggle.addEventListener('change', () => {
  const theme = themeToggle.checked ? 'dark' : 'light';
  document.documentElement.setAttribute('data-theme', theme);
  localStorage.setItem('theme', theme);
});
function closeWelcome(){ document.getElementById('welcome-overlay').style.display='none'; }
function acceptCookies(){ document.getElementById('cookie-banner').style.display='none'; }
const observer = new IntersectionObserver((entries) => {
  entries.forEach(entry => { if(entry.isIntersecting) entry.target.classList.add('visible'); });
}, { threshold: 0.1 });
document.querySelectorAll('section').forEach(section => observer.observe(section));
document.querySelectorAll('.pq-q').forEach(q => {
  q.addEventListener('click', () => {
    const parent = q.parentElement;
    parent.classList.toggle('open');
    const ans = parent.querySelector('.pq-a');
    ans.style.maxHeight = parent.classList.contains('open') ? ans.scrollHeight + "px" : "0";
  });
});
let prideEntries = JSON.parse(localStorage.getItem('prideEntries')) || [];
function renderPrideWall() {
  const container = document.getElementById('prideWall');
  let html = '';
  prideEntries.forEach(e => {
    html += `<div class="pride-card"><h4>${e.name}</h4><p>${e.orientation || 'Community Member'}</p><div class="badges">
        ${e.age ? '<span class="badge">Age: ' + e.age + '</span>' : ''}
        ${e.accept ? '<span class="badge"><i class="fas fa-check"></i> Accepted: ' + e.accept + '</span>' : ''}
        ${e.parents ? '<span class="badge"><i class="fas fa-family"></i> Parents: ' + e.parents + '</span>' : ''}
      </div></div>`;
  });
  container.innerHTML = html;
}
function submitPrideEntry() {
  const name = document.getElementById('prideName').value.trim();
  const age = document.getElementById('prideAge').value.trim();
  const instagram = document.getElementById('prideInsta').value.trim();
  const orientation = document.getElementById('prideOrientation').value.trim();
  const accept = document.getElementById('prideAccept').value;
  const parents = document.getElementById('prideParents').value;
  const terms = document.getElementById('prideTerms').checked;
  if (!name || !terms) return false;
  prideEntries.push({ name, age, instagram, orientation, accept, parents });
  localStorage.setItem('prideEntries', JSON.stringify(prideEntries));
  renderPrideWall();
  document.querySelector('.wall-form form').reset();
  return false;
}
window.addEventListener('load', () => {
  const savedTheme = localStorage.getItem('theme') || 'light';
  document.documentElement.setAttribute('data-theme', savedTheme);
  themeToggle.checked = (savedTheme === 'dark');
  renderPrideWall();
  setTimeout(() => { document.getElementById('cookie-banner').style.display='flex'; }, 3000);
});
</script>
</body>
</html>
